{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": 800,
  "height": 450,
  "title": "Population for each States in Malaysia (2023)",
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/St27777/FIT3179/main/malaysia-states.topojson",
    "format": {"type": "topojson", "feature": "states"}
  },
  "transform": [
    {
      "lookup": "properties.Name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/St27777/FIT3179/main/Population.csv"
        },
        "key": "Name",
        "fields": ["Population"]
      }
    },
    {
      "lookup": "properties.Name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/St27777/FIT3179/main/Housing.csv"
        },
        "key": "Name",
        "fields": ["HousingTransaction"]
      }
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Population",
      "type": "quantitative",
      "scale": {"type": "log"},
      "title": "Population(2023)"
    },
    "tooltip": [
      {"field": "properties.Name", "type": "nominal", "title": "States"},
      {"field": "Population", "type": "quantitative", "title": "Population"},
      {
        "field": "HousingTransaction",
        "type": "quantitative",
        "title": "Housing Transaction"
      }
    ]
  },
  "config": {}
}